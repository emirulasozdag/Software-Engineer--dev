# Copy to .env and adjust
APP_ENV=dev
APP_NAME=Adaptive Learning API
APP_HOST=127.0.0.1
APP_PORT=8000

# SECURITY
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# DATABASE
DATABASE_URL=sqlite:///./app.db

# AI Provider (mock by default)
AI_PROVIDER=mock

# Google GenAI (Gemini) provider
# Set AI_PROVIDER=google to enable.
GOOGLE_API_KEY=
GOOGLE_GENAI_MODEL=gemini-2.0-flash
GOOGLE_GENAI_TEMPERATURE=0.2
GOOGLE_GENAI_MAX_OUTPUT_TOKENS=1024
